<div class="jumbotron">
  <h2><%=@user.name.titleize%></h2>
  
  <hr class="my-4">
  <% if current_user.id == @user.id%>
    <p>Username: <%=@user.username%></p>
  <%end%>
  <p>Age: <%=@user.age%>
  <p>Bookshops Visited: <%=@user.visits.length%>
  <h3> Favorited Bookshops </h3>
  <ul class="container-1">
      <% @user.visits.each do |visit_instance| %>
        <% if visit_instance.favorite %>
          <li class="container-2"><p id="favlink"><%= link_to visit_instance.bookshop.name, bookshop_path(visit_instance.bookshop) %></p></li>
        <% end %>
        
      <% end %>
  </ul>
  
  <p class="lead">
    <% if current_user.id == @user.id%>
        <%= link_to "Update Profile", edit_user_path(@user), class:"btn btn-secondary"%>
    <%elsif current_user.friendees.include?(@user)%>
        <%= link_to "Remove Friend", "/friendships/#{current_user.friender_friendships.find_by(friendee_id:@user.id).id}", method:"delete", class:"btn btn-secondary"%>
    <%else%> 
        <%= link_to "Add Friend", '/friendships/', method:"post", class:"btn btn-secondary"%> 
    <%end%>
    <%if current_user.visits.length > 0%>
      <%= link_to "Visited Bookshops", visits_path(@user), class:"btn btn-secondary" %>
    <%end%>
  </p>
</div>




<% if current_user.id == @user.id%>
  <%= month_calendar events: @events do |date, events| %>
    <%= date %>

    <% events.each do |event| %>
      <div>
        <p class= "event"> <%= link_to event.name, event_path(event)%></p>
      </div>
    <% end %>
  <% end %>
<%end%>

















